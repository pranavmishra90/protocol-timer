{
    "image": "pranavmishra90/facsimilab-main:latest",
    "name": "protocol-timer",
    "containerUser": "coder",
    // "workspaceFolder": ["/workspaces", "/home/coder/work"],
    "updateRemoteUserUID": true,
    "hostRequirements": {
        "cpus": 1,
        "memory": "2gb",
        "storage": "10gb"
    },
    "secrets": {
        "matrix_webhook": {
            "description": "The webhook url for the matrix server"
        },
        "discord_webhook_url": {
            "description": "The discord URL for the webhook"
        },
        "discord_channel_id": {
            "description": "The discord channel ID"
        }
    },
    "settings": {
        "python.defaultInterpreterPath": "/opt/conda/bin/python",
        "window.title": "Protocol Timer (DevContainer)"
        
    }
    // Keep the container running in the background even after closing VSCode
    "shutdownAction": "none",
    "customizations": {
        "vscode": {
            "extensions": [
				"ms-vscode-remote.vscode-remote-extensionpack",
				"mechatroner.rainbow-csv",
				"ms-toolsai.jupyter",
				"ms-toolsai.vscode-jupyter-powertoys"
            ]
        }
    },
    // "postCreateCommand": [
    //     "tail -F anything"
    // ],
    "postAttachCommand": {
        "server": "/bin/bash ./test/run-test.sh"
        
    }
}
