{
    "image": "pranavmishra90/facsimilab-main:latest",
    "name": "protocol-timer",
    "containerUser": "coder",
    "workspaceFolder": ["/workspaces", "/home/coder/work"],
    "updateRemoteUserUID": true,
    "hostRequirements": {
        "cpus": 1,
        "memory": "2gb",
        "storage": "10gb"
    },
    "secrets": {
        "matrix_webhook": {
            "description": "The webhook url for the matrix server"
        },
        "discord_webhook_url": {
            "description": "The discord URL for the webhook"
        },
        "discord_channel_id": {
            "description": "The discord channel ID"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode-remote.vscode-remote-extensionpack",
                "ms-azuretools.vscode-docker",
                "eamodio.gitlens",
                "esbenp.prettier-vscode",
                "ms-python.black-formatter",
                "mechatroner.rainbow-csv",
                "janisdd.vscode-edit-csv",
                "ms-python.python",
                "ms-toolsai.jupyter",
                "ms-toolsai.vscode-jupyter-powertoys"
            ]
        }
    },
    "shutdownAction": "none",
    "postCreateCommand": [
        "/bin/bash"
    ],
    "postAttachCommand": {
        "server": "/usr/bin/micromamba env create --prefix /workspaces/protocol-timer/env -f /workspaces/protocol-timer/environment.yml",
        "server": "echo 'Create a python environment with `mamba env create --prefix ./env -f ./environment.yml` and activate it with `mamba activate ./env`'"
        
    }
}
